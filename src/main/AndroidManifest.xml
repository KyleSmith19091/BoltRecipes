<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kylesmith.boltrecipes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.CreateAccountActivity" />
        <activity
            android:name=".View.UsersRecipeActivity"
            android:label="@string/title_activity_users_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.CreateRecipeBaseActivity" />
        <activity android:name=".View.CreateRecipeContentsActivity"></activity>
    </application>

</manifest>